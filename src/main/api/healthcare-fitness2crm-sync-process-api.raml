#%RAML 1.0
title: template-healthcare-fitness2crm-sync-process-api
baseUri: https://template-healthcare-fitness2crm-sync-process-api.cloudhub.io/api
mediaType: application/json
version: v1

/patients/{id}:
  uriParameters:
    id:
      type: string|integer
      description: Patient ID
  /authorize:
    displayName: Authorize Fitbit user
    get:
      responses:
        302:
  /unauthorize:
    displayName: Unauthorize Fitbit user
    get:
      responses:
        200:
          body:
            application/json:
  /migrateFitnessData:
    displayName: Update Fitbit devices data together with activity and sleep observations for given patient
    post:
      description: Update Fitbit devices data together with activity and sleep observations for given patient
      queryParameters:
        fromDate:
          type: string
          example: 2016-07-18
          required: true
      responses:
        200:
          body:
            application/json:
              example: !include migrateFitnessData-response.json